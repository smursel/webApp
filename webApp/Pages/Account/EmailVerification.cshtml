@page
@model webApp.Pages.Account.EmailVerificationModel
@{
    ViewData["Title"] = "E-posta Doğrulama";
}

<div class="email-verification-container">
    <div class="email-verification-box">
        <h1 class="title">@ViewData["Title"]</h1>
        <h2 class="message">@Model.Message</h2>
        @if (Model.IsSuccess)
        {
            <p class="info-text">Hesabınız onaylandı. Ana sayfaya geri dönmek için aşağıdaki butona tıklayın:</p>
            <a href="/HomePage" class="primary-button">Ana Sayfa</a>
        }
        else
        {
            <p class="error-text">@Html.Raw(Model.ActionLink)</p>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px 0; /* Üst ve alt boşluk */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .email-verification-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 20px; /* Yanlarda içerik için boşluk */
    }

    .email-verification-box {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 40px 30px; /* İçerik için daha fazla boşluk */
        max-width: 400px;
        width: 100%;
    }

    .title {
        color: #004aad;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .message {
        color: #333;
        font-size: 18px;
        margin-bottom: 25px;
    }

    .info-text {
        font-size: 14px;
        color: #555;
        margin-bottom: 20px;
    }

    .error-text {
        font-size: 14px;
        color: red;
    }

    .primary-button {
        display: inline-block;
        background-color: #004aad;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
    }

        .primary-button:hover {
            background-color: #00337a;
        }
</style>
